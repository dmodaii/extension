{
    "manifest_version": 3,
    "name": "extension name",
    "description": "This extension demonstrates extension description.",
    "version": "1.0",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/icon.png",
            "32": "/images/icon.png",
            "48": "/images/icon.png",
            "128": "/images/icon.png"
        }
    },
    "options_page": "options.html",
    "host_permissions": [
        "*://*/*"
    ]
}